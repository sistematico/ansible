server {
	listen 80 default_server;
	listen [::]:80 default_server;

	# SSL
	include ssl-default.conf*;

	root /var/www/html;
	index index.php index.html;

	server_name _;

	location / {
		try_files $uri $uri/ =404;
	}

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/run/php/php{{ php_version.stdout }}-fpm.sock;
	}
	
	location ~ /\.ht {
		deny all;
	}
}